Function FindChildByClass(parentw, childhand)
firs% = GetWindow(parentw, 5)
If UCase(Mid(GetClass(firs%), 1, Len(childhand))) Like UCase(childhand) Then GoTo bone
firs% = GetWindow(parentw, GW_CHILD)
If UCase(Mid(GetClass(firs%), 1, Len(childhand))) Like UCase(childhand) Then GoTo bone

While firs%
firss% = GetWindow(parentw, 5)
If UCase(Mid(GetClass(firss%), 1, Len(childhand))) Like UCase(childhand) Then GoTo bone
firs% = GetWindow(firs%, 2)
If UCase(Mid(GetClass(firs%), 1, Len(childhand))) Like UCase(childhand) Then GoTo bone
Wend
FindChildByClass = 0

bone:
Room% = firs%
FindChildByClass = Room%
End Function
Function FindChildByTitle(parentw, childhand)
firs% = GetWindow(parentw, 5)
If UCase(GetCaption(firs%)) Like UCase(childhand) Then GoTo bone
firs% = GetWindow(parentw, GW_CHILD)

While firs%
firss% = GetWindow(parentw, 5)
If UCase(GetCaption(firss%)) Like UCase(childhand) & "*" Then GoTo bone
firs% = GetWindow(firs%, 2)
If UCase(GetCaption(firs%)) Like UCase(childhand) & "*" Then GoTo bone
Wend
FindChildByTitle = 0

bone:
Room% = firs%
FindChildByTitle = Room%
End Function


Public Function ChatOnly(Text2)
Dim thechat As String
Dim a As Integer
Dim z As Integer
z = 0
For a = 1 To Len(Text2)
z = z + 1
If Mid(Text2, a, 1) = ":" Then
thechat = Mid(Text2, z + 1)
End If
Next a
ChatOnly = thechat
End Function
Public Function NameOnly(Text2)
Dim thename As String
Dim a As Integer
Dim z As Integer
z = 0
For a = 1 To Len(Text2)
z = z + 1
If Mid(Text2, a, 1) = ":" Then
thename = Mid(Text2, 1, z - 1)
End If
Next a
NameOnly = thename
End Function

Public Function SearchList(List As ListBox, Item As String) As Boolean
Dim a As Integer
Dim b As Integer
For a = 1 To List.ListCount
If List.List(a) = Item Then
b = 0
End If
Next a
If b = 0 Then
SearchList = True
ElseIf b <> 0 Then
SearchList = False
End If
End Function
Public Function FindChatRoom()
'finding the aol window
Parent% = FindWindow("AOL Frame25", vbNullString)
'finding the
MDI% = FindChildByClass(Parent%, "MDIClient")
'finding the actual room
theroom% = FindChildByClass(MDI%, "AOL Child")
'finding the listbox of peepz in the room
ListBox% = FindChildByClass(theroom%, "_AOL_Listbox")
'finding the chat window you see
chatwindow% = FindChildByClass(theroom%, "RICHCNTL")
If ListBox% <> 0 And chatwindow% <> 0 Then
FindChatRoom = theroom%
Else
MsgBox "Chat room not found!", vbExclamation, "Error"
End If
End Function

Public Function SendChat(Chat)
theroom% = FindChatRoom
chatbox% = FindChildByClass(theroom%, "RICHCNTL")
sendbutton% = FindChildByClass(theroom%, "_AOL_Icon")
Call SendMessageByString(chatbox%, WM_SETTEXT, 0, Chat)
Call SendMessageByNum(sendbutton, WM_CHAR, 13, 0)
End Function


Function GetText(child)
GetTrim = SendMessageByNum(child, 14, 0&, 0&)
TrimSpace$ = Space$(GetTrim)
GetString = SendMessageByString(child, 13, GetTrim + 1, TrimSpace$)
GetText = TrimSpace$
End Function

Function GetChat()
chatbox% = FindChildByClass(FindChatRoom, "RICHCNTL")
GetChat = GetText(chatbox%)
End Function


Public Function FindBuddyPeople()

